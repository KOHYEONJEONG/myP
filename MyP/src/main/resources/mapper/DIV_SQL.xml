	<select id="getDivCnt" parameterType="hashmap" resultType="Integer">
		SELECT COUNT(*) AS CNT
		FROM CATEGORY_DIV
		WHERE DEL = 1
		 <if test="searchText != null and searchText != ''">
				<choose>
				 	<when test="searchGbn eq 0">
				 			 AND DIV_NM LIKE '%' || #{searchText}  || '%'
				 	</when>
				</choose>
			</if>
	</select>
	<select id="getDivList" parameterType="hashmap" resultType="hashmap">
		SELECT S.DIV_NUM, S.DIV_NM
		FROM( SELECT DIV_NUM, DIV_NM, ROW_NUMBER() OVER(ORDER BY DIV_NUM DESC, DIV_NM DESC) AS RNK
		FROM CATEGORY_DIV
		WHERE DEL = 1
		 <if test="searchText != null and searchText != ''">
				<choose>
				 	<when test="searchGbn eq 0">
				 			 AND DIV_NM LIKE '%' || #{searchText}  || '%'
				 	</when>
				</choose>
			</if>
	      ) S
		WHERE S.RNK BETWEEN #{start} AND #{end}
	</select>
	
